{
  "compileOnSave": false,
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "pretty": true,
    "moduleResolution": "node",
    "target": "es2018",
    "module": "ES2015",
    "esModuleInterop": true,
    "jsx": "react",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "noEmitOnError": false,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "lib": ["dom", "es2018", "esnext.asynciterable"],
    "typeRoots": ["../node_modules/@types"]
  }
}
