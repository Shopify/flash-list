{
  "testRunner": "jest",
  "runnerConfig": "e2e/config.json",
  "skipLegacyWorkersInjection": true,
  "apps": {
    "ios.release": {
      "type": "ios.app",
      "binaryPath": "../ios/build/Build/Products/Release-iphonesimulator/FlatListPro.app",
      "build": "CODE_SIGNING_REQUIRED=NO && RCT_NO_LAUNCH_PACKAGER=true && xcodebuild -workspace ios/FlatListPro.xcworkspace -scheme FlatListPro -configuration Release -sdk iphonesimulator -derivedDataPath ../ios/build -quiet -destination 'platform=iOS Simulator,name=iPhone 11,OS=latest'"
    },
    "android.release": {
      "type": "android.apk",
      "binaryPath": "android/app/build/outputs/apk/release/app-release.apk",
      "build": "cd android && ./gradlew assembleRelease assembleAndroidTest -DtestBuildType=release"
    }
  },
  "devices": {
    "simulator": {
      "type": "ios.simulator",
      "device": {
        "type": "iPhone 11"
      }
    },
    "emulator": {
      "type": "android.emulator",
      "device": {
        "avdName": "React-Native-Phone"
      }
    }
  },
  "configurations": {
    "ios.sim.release": {
      "device": "simulator",
      "app": "ios.release"
    },
    "android.emu.release": {
      "device": "emulator",
      "app": "android.release"
    }
  }
}
